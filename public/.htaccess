# Block search engine bots and crawlers from indexing this content
# FTP Analyser - Internal Tool

# Simple bot blocking without server-specific modules
RewriteEngine On

# Block major search engine bots
RewriteCond %{HTTP_USER_AGENT} (googlebot|bingbot|slurp|duckduckbot|baiduspider|yandexbot) [NC]
RewriteRule .* - [F,L]

# Block social media crawlers  
RewriteCond %{HTTP_USER_AGENT} (facebookexternalhit|twitterbot|linkedinbot|whatsapp) [NC]
RewriteRule .* - [F,L]

# Block archiving bots
RewriteCond %{HTTP_USER_AGENT} (ia_archiver|wayback|archive\.org_bot) [NC]
RewriteRule .* - [F,L]

# Block SEO tools
RewriteCond %{HTTP_USER_AGENT} (semrushbot|ahrefsbot|mj12bot|dotbot|blexbot) [NC]
RewriteRule .* - [F,L]

# Add X-Robots-Tag header if mod_headers is available
<IfModule mod_headers.c>
    Header always set X-Robots-Tag "noindex, nofollow"
</IfModule>